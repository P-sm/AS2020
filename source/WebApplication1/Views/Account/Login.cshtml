@model DronTaxiWeb.Models.LoginModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_NotAuthLayout";
}
<h2>АВТОРИЗАЦИЯ</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Логин</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <div class="row" style="margin-right:2px;">

                        <div class="col-3"><input asp-for="Remember" /><span></span></div>
                        <div class="col-9">
                            <label asp-for="Remember" style="
    font-size: 18px;
    font-weight: bold;
    color: white;
"> Запомнить</label>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <input type="submit" value="Войти" class="btn w-170 btn-blue" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="Register" asp-controller="Account" class="btn btn-green w-350">Регистрация</a>
        </div>


    </div>
</form>